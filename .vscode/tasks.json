      "label": "Clear locks",
      "type": "process",
      "command": "python",
      "args": [
        "${workspaceFolder}/.vscode/scripts/deploy.py",
        "--clear-lock"
      ],
      "problemMatcher": [],
      "presentation": { 
        "reveal": "always", 
        "panel": "shared", 
        "clear": true 
      }
    },
    {
      "label": "ethos.Start",
      "type": "process",
      "command": "${command:ethos.start}",
      "problemMatcher": [],
