      "problemMatcher": [],
      "presentation": { 
        "reveal": "always", 
        "panel": "shared", 
        "clear": true 
      }
    },
    {
      "label": "ethos.OpenTelemetry",
      "type": "process",
      "command": "${command:ethos.openTelemetry}",
      "problemMatcher": [],
      "presentation": { 
        "reveal": "always", 
        "panel": "shared", 
        "clear": true 
      }
    },
    {
      "label": "ethos.StartChain",
      "dependsOn": [
        "ethos.SetFirmware",
        "ethos.SetRoot",
        "ethos.Start"
