{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Deploy Mogster Widget [SIM]",
      "type": "process",
      "command": "python",
      "args": [
        "${workspaceFolder}/.vscode/scripts/deploy.py",
        "--lang", "${config:mogster.deploy.language}"
      ],
      "options": {
        "env": {
          "MOGSTER_LANG": "${config:mogster.deploy.language}",
          "ETHOS_FIRMWARE": "${config:ethos.firmware}"
        }
      },
      "problemMatcher": [],
      "presentation": { 
        "reveal": "always", 
        "panel": "shared", 
        "clear": true 
      }
    },
    {
      "label": "Deploy Mogster Widget [Radio]",
      "type": "process",
      "command": "python",
      "args": [
        "${workspaceFolder}/.vscode/scripts/deploy.py",
        "--radio",
        "--lang", "${config:mogster.deploy.language}"
      ],
      "problemMatcher": [],
      "presentation": { 
        "reveal": "always", 
        "panel": "shared", 
        "clear": true 
      }
    },
